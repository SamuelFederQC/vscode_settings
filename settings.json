{
   "editor.bracketPairColorization.enabled": true,
   "editor.rulers": [
       80,
       88
   ],
   // see:  https://code.visualstudio.com/docs/editor/intellisense#_tab-completion
   "editor.tabCompletion": "on",
   "extensions.autoCheckUpdates": false,
   "extensions.autoUpdate": false,
   "files.trimTrailingWhitespace": true,
   "git.autofetch": true,
   "jupyter.askForKernelRestart": false,
   "jupyter.debugJustMyCode": false,
   "jupyter.runStartupCommands": [
       "%config IPCompleter.use_jedi=False",
       "%load_ext autoreload",
       "%autoreload 2"
   ],
   "jupyter.sendSelectionToInteractiveWindow": true,
   // "python.autoUpdateLanguageServer": false,
   // "python.condaPath": "/opt/conda/bin/activate",
   // "python.formatting.provider": "black",
   "python.linting.enabled": true,
   "python.linting.flake8Enabled": true,
   "python.linting.pylintEnabled": false,
   // "python.pythonPath": "/opt/conda/envs/sd-pricing-r/bin/python",
   "python.testing.pytestEnabled": true,
   "python.testing.pytestArgs": [
       "tests"
   ],
   "terminal.integrated.scrollback": 100000,
   "window.menuBarVisibility": "visible",
   "workbench.iconTheme": "vscode-icons",
   "[python]": {
       "editor.defaultFormatter": "ms-python.black-formatter"
   },
   "editor.detectIndentation": false,
   "editor.useTabStops": false,
   "workbench.editorAssociations": {
       "*.ipynb": "jupyter-notebook"
   },
   "editor.mouseWheelZoom": true,
   "notebook.output.textLineLimit": 200000,
   "workbench.colorTheme": "Default Dark+",
   "editor.suggestSelection": "first",
   "python.languageServer": "Pylance",
   "files.autoSave": "onFocusChange",
   "files.defaultLanguage": "${activeEditorLanguage}",
   "notebook.cellToolbarLocation": {
       "default": "right",
       "jupyter-notebook": "left"
   },
   "editor.suggest.localityBonus": true,
   "editor.suggest.shareSuggestSelections": true,
   "workbench.editor.enablePreview": false,
}
